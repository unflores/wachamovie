{
  "compilerOptions": {
    "outDir": "./assets/js/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "baseUrl": ".",
    "allowUnreachableCode": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "include": ["./src/**/*"]
}
